@model FormRegisterWeb.Models.Client

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container rounded bg-white w-500 p-3">
    <h1>Detalhes de Cliente</h1>
    <hr />

    <div class="row mt-3 ms-3">
        <div class="col-md-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </div>
        <div class="col-md-6">
            @Html.DisplayFor(model => model.FirstName)
            @Html.DisplayFor(model => model.LastName)
        </div>
    </div>
    <div class="row ms-3">
        <div class="col-md-2">
            @Html.DisplayNameFor(model => model.Email)
        </div>
        <div class="col-md-6">
            @Html.DisplayFor(model => model.Email)
        </div>
    </div>
    <div class="row ms-3">
        <div class="col-md-2">
            @Html.DisplayNameFor(model => model.Phone)
        </div>
        <div class="col-md-6">
            @if (Model.Phone != 0)
            {
                @Html.DisplayFor(model => model.Phone)
            }
        </div>
    </div>
    <div class="row ms-3">
        <div class="col-md-2">
            @Html.DisplayNameFor(model => model.Age)
        </div>
        <div class="col-md-6">
            @if (Model.Age != 0)
            {
                @Html.DisplayFor(model => model.Age)
            }
        </div>
    </div>
    <div class="row ms-3">
        <div class="col-md-2">
            @Html.DisplayNameFor(model => model.Sex)
        </div>
        <div class="col-md-6">
            @Html.DisplayFor(model => model.Sex)
        </div>
    </div>
    <div class="row ms-3">
        <div class="col-md-2">
            @Html.DisplayNameFor(model => model.Address)
        </div>
        <div class="col-md-6">
            @Html.DisplayFor(model => model.Address)
        </div>
    </div>
    <div class="row ms-3">
        <div class="col-md-2">
            @Html.DisplayNameFor(model => model.City)
        </div>
        <div class="col-md-6">
            @Html.DisplayFor(model => model.City)
        </div>
    </div>
    <div class="row ms-3">
        <div class="col-md-2">
            @Html.DisplayNameFor(model => model.PostalCode)
        </div>
        <div class="col-md-6">
            @Html.DisplayFor(model => model.PostalCode)
        </div>
    </div>
    <div class="row ms-3">
        <div class="col-md-2">
            @Html.DisplayNameFor(model => model.Country)
        </div>
        <div class="col-md-6">
            @Html.DisplayFor(model => model.Country)
        </div>
    </div>
    <div class="m-3">
        <a class="btn btn-primary pe-2" asp-action="Edit" asp-route-id="@Model?.Id">Alterar</a>
        <a style="color:black" class="btn btn-light" role="button" asp-action="Index">Voltar</a>
    </div>
</div>

